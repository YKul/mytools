#!/bin/bash

message=""

for arg in "$@"; do
	message="$message $arg"
done

converted=""
cap_flag=true
for (( i=0; i<${#message}; i++ ))
do
  if [[ "${message:$i:1}" == [A-Za-z] ]]
  then
  	if $cap_flag
  	then
  		temp_char="${message:$i:1}"
    	converted+="${temp_char^}"
    	cap_flag=false
  	else
  		temp_char=`echo "${message:$i:1}" | tr 'A-Z' 'a-z'`
    	converted+=$temp_char
    	cap_flag=true
    fi
  else
    converted+="${message:$i:1}"
  fi
done
while [[ "${converted: -1}" != [A-Za-z] ]]
do
   converted="${converted%?}"
done
converted+="!"
converted="${converted:1}"
echo -n "$converted" | xclip -selection clipboard
cat << "EOF"
⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⣠⣀⣄⣀⡀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⡾⠿⠛⠓⣌⠙⣦⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⢠⡇⠀⠀⠀⠈⢣⠘⡆⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀
